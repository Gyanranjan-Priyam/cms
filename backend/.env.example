# ==========================================
# Backend Environment Variables
# ==========================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to version control!

# Database Configuration
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/cms_db
# Optional: Separate test database
MONGODB_TEST_URI=mongodb://localhost:27017/cms_test_db

# Authentication & Security
# Generate a secure 32+ character secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here_also_32_plus_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Payment Gateway - Razorpay (Get from: https://dashboard.razorpay.com/)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_from_razorpay_dashboard

# Payment Gateway - Cashfree (Get from: https://merchant.cashfree.com/)
CASHFREE_APP_ID=TEST_xxxxxxxxxxxxxxxxxxxxxxxx
CASHFREE_SECRET_KEY=cfsk_ma_test_xxxxxxxxxxxxxxxxxxxxxxxx
CASHFREE_BASE_URL=https://sandbox.cashfree.com/pg
CASHFREE_API_VERSION=2023-08-01

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# File Upload (Optional)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_college_email@gmail.com
SMTP_PASS=your_gmail_app_password
SMTP_FROM=noreply@yourcollege.edu

# Additional Security (Optional)
BCRYPT_ROUNDS=12
SESSION_SECRET=another_secure_session_secret_key
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Development/Debug (Optional)
DEBUG=cms:*
LOG_LEVEL=info
